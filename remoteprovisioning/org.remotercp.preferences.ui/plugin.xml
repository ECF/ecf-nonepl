<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.remotercp.preferences.ui.rosterItemContribution"
            objectClass="org.eclipse.ecf.presence.roster.IRosterItem">
         <action
               class="org.remotercp.preferences.ui.actions.PreferencesAction"
               icon="icons/preferences_16x16.png"
               id="org.remotercp.preferences.ui.preferencesAction"
               label="Get Preferences"
               menubarPath="additions">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.remotercp.preferences.ui.editor.PreferenceEditor"
            icon="icons/preferences_16x16.png"
            id="org.remotercp.preferences.ui.preferenceEditor"
            name="Edit Preferences">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            id="org.remotercp.preferences.ui.editorPreferenceAction"
            targetID="org.remotercp.preferences.ui.preferenceEditor">
         <action
               class="org.remotercp.preferences.ui.actions.ComparePreferencesEditorAction"
               icon="icons/preferences_32x32.png"
               id="org.remotercp.preferences.ui.comparePreferenceAction"
               label="Compare preferences"
               style="push"
               toolbarPath="additions"
               tooltip="Compare remote preferences with local preferences">
         </action>
      </editorContribution>
   </extension>

</plugin>
